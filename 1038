X, Y = input().split()
X = int(X)
Y = int(Y)

if(X==1):
  total = float(Y*4.00)
  print("Total: R$ {:.2f}".format(total))

elif(X==2):
  total = float(Y*4.50)
  print("Total: R$ {:.2f}".format(total))

elif(X==3):
  total = float(Y*5.00)
  print("Total: R$ {:.2f}".format(total))

elif(X==4):
  total = float(Y*2.00)
  print("Total: R$ {:.2f}".format(total))

elif(X==5):
  total = float(Y*1.50)
  print("Total: R$ {:.2f}".format(total))
